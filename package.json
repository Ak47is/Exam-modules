{
  "name": "exam-modules",
  "version": "1.0.0",
  "description": "IELTS exam modules including Reading, Writing, and Listening tests",
  "private": true,
  "workspaces": [
    "reading-test",
    "writing-test",
    "listening-test"
  ],
  "scripts": {
    "start:reading": "cd reading-test && npm start",
    "start:writing": "cd writing-test && npm start",
    "start:listening": "cd listening-test && npm start",
    "build:reading": "cd reading-test && npm run build",
    "build:writing": "cd writing-test && npm run build",
    "build:listening": "cd listening-test && npm run build",
    "install:all": "npm install && npm run install:modules",
    "install:modules": "cd reading-test && npm install && cd ../writing-test && npm install && cd ../listening-test && npm install"
  },
  "dependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.0",
    "typescript": "^4.9.0",
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0"
  }
}